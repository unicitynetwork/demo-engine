extends layout

block content 
	div.alert.bg-primary.text-white.mb-3
		div.d-flex.justify-content-between.align-items-center
			strong.me-2 These demos show different aspects of the Unicity Platform
			button.btn.btn-link.p-0(
				data-bs-toggle="collapse" 
				data-bs-target="#welcomeText" 
				aria-expanded="true"
				aria-controls="welcomeText"
			)
				i.bi.bi-chevron-up.fs-5.fw-bold.text-white

		div#welcomeText.collapse.show
			ul.mb-0
				li Combat Wordle tokenizes the leaderboard and provides proof of honest gameplay 
				li Player v Agent shows how to mint tokens and transfer them agent to agent 
				li Agent v Agent shows agents playing agents and making payments
				li UniDex An exchange with a centralized order book and decentralized settlement
				li WebGui - Raw web interface for minting and sending tokens 

	div.container.mt-5
		div.row.justify-content-center
			div.col-md-6
				div.card.shadow
					div.card-header.bg-primary.text-white.text-center
						h2.mb-0 Unicity Demos

					div.mb-4.game-selection
						//label.form-label.h5 Select Game
						div.list-group
							a(href="/spgame").list-group-item.list-group-item-action
								h5.mb-1 Player vs Agent
								p.mb-1.game-desc Challenge an Agent to Wordle

							a(href="/speedwordlecontest").list-group-item.list-group-item-action
								h5.mb-1 Combat Wordle
								p.mb-1.game-desc Race against time

							//a(href="/deathmatch").list-group-item.list-group-item-action
								h5.mb-1 Agent Death Match
								p.mb-1.game-desc Watch agents play each other

							a(href="/uniroad").list-group-item.list-group-item-action
								h5.mb-1 Uniroad  
								p.mb-1.game-desc Agent-based p2p marketplace

							a(href="/soccerbet").list-group-item.list-group-item-action
								h5.mb-1 Soccer Betting
								p.mb-1.game-desc Decentralized sports betting platform
							
							a(href="/esports").list-group-item.list-group-item-action
								h5.mb-1 eSports Platform
								p.mb-1.game-desc Complete eSports ecosystem with tokenization
							
							a(href="/cricket").list-group-item.list-group-item-action
								h5.mb-1 Cricket Betting
								p.mb-1.game-desc Indian Cricket League betting platform
							
							a(href="/poker").list-group-item.list-group-item-action
								h5.mb-1 Poker
								p.mb-1.game-desc P2P poker platform with proof of fair play

							a(href="/unidex").list-group-item.list-group-item-action
								h5.mb-1 Unidex
								p.mb-1.game-desc CEX with decentralized settlement
								
							a(href="/dex").list-group-item.list-group-item-action
								h5.mb-1 Decentralized Exchange
								p.mb-1.game-desc Fully on-chain DEX with liquidity pools
								
							a(href="/clob").list-group-item.list-group-item-action
								h5.mb-1 Central Limit Order Book
								p.mb-1.game-desc Trading platform with advanced order types
								
							a(href="/spacemarkets").list-group-item.list-group-item-action
								h5.mb-1 Satellite Spectrum Auction
								p.mb-1.game-desc Transparent orbital slot bidding

							a(href="https://unicitynetwork.github.io/tx-flow-engine/").list-group-item.list-group-item-action
								h5.mb-1 Web Gui
								p.mb-1.game-desc Mint and send Tokens 
								
							a(href="/dating").list-group-item.list-group-item-action
								h5.mb-1 Local Dating
								p.mb-1.game-desc ZK credential verification
								
							a(href="/sendmoneyhome").list-group-item.list-group-item-action
								h5.mb-1 Send Money Home
								p.mb-1.game-desc Secure family remittances
								
							a(href="/flightagent").list-group-item.list-group-item-action
								h5.mb-1 Flight Booking Agent
								p.mb-1.game-desc AI travel assistant
								
							a(href="/building-permit").list-group-item.list-group-item-action
								h5.mb-1 Building Permit Agent
								p.mb-1.game-desc Streamlined permit application
								
							a(href="/medicalresearch").list-group-item.list-group-item-action
								h5.mb-1 Medical Research
								p.mb-1.game-desc Secure genomic data sharing
								
							a(href="/unichat").list-group-item.list-group-item-action
								h5.mb-1 Unichat
								p.mb-1.game-desc P2P group chat with token transfer
								
							a(href="/unisign").list-group-item.list-group-item-action
								h5.mb-1 UniSign
								p.mb-1.game-desc Agent-powered document signing
								
							a(href="/contractagent").list-group-item.list-group-item-action
								h5.mb-1 ContractAgent
								p.mb-1.game-desc AI-powered contract analysis and verification
	div(style="height: 800px;")


		script(src="/js/index.js")
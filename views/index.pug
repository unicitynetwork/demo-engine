extends layout

block content 
	div.container.mt-5
		div.row.justify-content-center
			div.col-md-6
				div.card.shadow
					div.card-header.bg-primary.text-white.text-center
						h2.mb-0 Unicity Agent Games

					div.card-body
						// Game selection
						div.mb-4
							label.form-label Game Mode
							div.list-group
								button#CombatWordle.list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center
									div
										h5.mb-1 Combat Wordle
										p.mb-1.text-muted Race against time
									input(type="radio" name="gameMode" value="CombatWordle")

								button#playerVsAgent.list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center
									div
										h5.mb-1 Player vs Agent
										p.mb-1.text-muted Beat the AI at Wordle
									input(type="radio" name="gameMode" value="playerVsAgent")
								
								button#agentVsAgent.list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center
									div
										h5.mb-1 Agent vs Agent
										p.mb-1.text-muted Watch agents play each other
									input(type="radio" name="gameMode" value="agentVsAgent")
								

						
						// Start button
						button#startGame.btn.btn-primary.btn-lg.w-100.disabled Start

		script(src="/js/index.js")
